
 <table id="tt3"></table>

<div id="dd3" icon="icon-save" style="padding: 5px; width: 400px; height: 250px; overflow: hidden">
    <form id="ff3">
        <div id="divU" style="height: 200px">
            <table cellpadding="0" cellspacing="1px" border="0" style="width: 100%;" bgcolor="b5d6e6">
                <tr style="background-color: White; height: 32px;">
                    <td style="width: 80px; padding-left: 5px">菜单名称</td>
                    <td style="padding: 5px">
                        <input id="DisplayName" type="text" name="DisplayName" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                    <td style="width: 80px; padding-left: 5px">打开方式</td>
                    <td style="padding: 5px">
                        <input id="OpenModel" type="text" name="OpenModel" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                                
                </tr>
                <tr style="background-color: White; height: 32px;">
                    <td style="width: 80px; padding-left: 5px">导航模块</td>
                    <td style="padding: 5px">
                        <input id="ModuleID" type="text" name="ModuleID" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                    <td style="width: 80px; padding-left: 5px">打开宽度</td>
                    <td style="padding: 5px">
                        <input id="Width" type="text" name="Width" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                </tr>
                <tr style="background-color: White; height: 32px;">
                    <td style="width: 80px; padding-left: 5px">导航控制器</td>
                    <td style="padding: 5px">
                        <input id="Controller" type="text" name="Controller" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                    <td style="width: 80px; padding-left: 5px">打开高度</td>
                    <td style="padding: 5px">
                        <input id="Height" type="text" name="Height" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                </tr>
                <tr style="background-color: White; height: 32px;">
                    <td style="width: 80px; padding-left: 5px">导航Action</td>
                    <td style="padding: 5px">
                        <input id="Action" type="text" name="Action" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                    <td style="width: 80px; padding-left: 5px">菜单图标</td>
                    <td style="padding: 5px">
                         @Html.Partial("_IconPicker",new {ID="iconpick",Style="width:200px",NewGuid=Guid.NewGuid()})
                    </td>
                </tr>
                <tr style="background-color: White; height: 32px;">
                  <td style="width: 80px; padding-left: 5px">父菜单</td>
                    <td style="padding: 5px">
                        <input id="PMenuID" type="text" name="PMenuID" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                    <td style="width: 80px; padding-left: 5px">是否叶子</td>
                    <td style="padding: 5px">
                        <input id="IsLeaf" type="text" name="IsLeaf" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
               
                </tr>
               
                <tr style="background-color: White; height: 32px;">
                   
                    <td style="width: 80px; padding-left: 5px">菜单描述</td>
                    <td style="padding: 5px">
                        <input id="Desc" type="text"  name="Desc" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" /></td>
                </tr>
            </table>
        </div>
    </form>
</div>


<script type="text/javascript">
    
   
    $('#tt3').treegrid({
        toolbar: [
            {
                iconCls: 'icon-10',
                plain: true,
                text: '增添',
                onClick: function () {
                    add();
                }
            }, '-', {
                iconCls: 'icon-edit',
                plain: true,
                text: '编辑',
                onClick: function () {
                    edit();
                }
            }, '-', {
                iconCls: 'icon-remove',
                plain: true,
                text: '删除',
                onClick: function () {
                    remove();
                }
            }
        ],
        collapsible: true,
        //url: '/api/Menu/GetMenuTree?id=null',
        rownumbers: true,
        singleSelect: true,
        pagination: true,
        pagePosition: 'bottom',
        pageNumber: 1,
        pageSize: 10,
        fit: true, //自动大小 
        pageList: [10, 20, 30, 40, 50],
        fitColumns: true,
        idField: 'ID',
        treeField: 'DisplayName',
        loadMsg: '数据装载中......',
        columns: [
            [
                { title: '显示名称', field: 'DisplayName', width: fixWidth(0.2), align: 'left' },
                { field: 'Module.Name', title: '导航模块', width: fixWidth(0.1) },
                { field: 'Controller', title: '导航控制器', width: fixWidth(0.1) },
                { field: 'Action', title: '导航Action', width: fixWidth(0.1) },
                { field: 'IconCls', title: '图标', width: fixWidth(0.1) },
                { field: 'IsLeaf', title: '叶子', width: fixWidth(0.05) },
                { field: 'OpenModel', title: '打开方式', width: fixWidth(0.1) },
                { field: 'Width', title: '宽度', width: fixWidth(0.05) },
                { field: 'Height', title: '高度', width: fixWidth(0.05) },
                { field: 'SortKey', title: '排序', width: fixWidth(0.05) },
                { field: 'Desc', title: '描述', width: fixWidth(0.1) }
            ]
        ],
        onLoadSuccess: function (row, data) {
            $.each(data, function (i, val) { $('#tt3').treegrid('collapseAll', data[i].id) });
            //delete $(this).treegrid('options').queryParams['id'];

        }
    });

    $(function () {
        $('#tt3').treegrid().treegrid('clientPaging');
    }); 

    function edit() {
      
        //获取node节点
        var node = $('#tt3').treegrid('getSelected');

        if (!node) {
            $.messager.alert('提示', '-_-|||！请先选中要操作的数据！');
            return;
        }

        $('#ff3').form("reset");

        //加载form数据
        $.ajax({
            url: '/Api/Menu/' + node.ID,
            type: 'Get',
            success: function (data) {
                $('#ff3').form('load', data);
            }
        });

        $('#dd3').dialog({
            title: '编辑部门管理',
            width: 800,
            height: 350,
            resizable: true,
            closed: false,
            buttons: [{
                    text: '修改',
                    handler: function () {
                        $("#dd3").dialog("close");
                        if ($("#ff3").form('enableValidation').form('validate')) {
                            //加载form数据
                            $.ajax({
                                url: '/Api/Menu/' + node.ID,
                                type: 'PUT',
                                data: $('#ff3').serialize(),
                                success: function (data) {
                                    if (data.success) {
                                        $('#tt3').treegrid('reload');
                                    }
                                    $.messager.alert('提示', data.message);
                                }
                            });
                        }
                    }
                }, {
                    text: '关闭',
                    handler: function () {
                        $("#dd3").dialog("close");
                    }
                }]
        });
    }

    function remove() {
        var node = $('#tt3').treegrid('getSelected');

        if (!node) {
            $.messager.alert('提示', '-_-|||！请先选中要操作的数据！');
        }

        $.ajax({
            url: '/Api/Menu/' + node.ID,
            type: 'DELETE',
            success: function (data) {
                if (data.success) {
                    $('#tt3').treegrid('reload');
                }
                $.messager.alert('提示', data.message);
            }
        });

    }

    function add() {
        $('#ff3').form("reset");
        $('#dd3').dialog({
            title: '新增部门管理',
            width: 800,
            height: 350,
            resizable: true,
            closed: false,
            buttons: [{
                    text: '添加',
                    handler: function () {
                        $("#dd3").dialog("close");
                        if ($("#ff3").form('enableValidation').form('validate')) {
                            //加载form数据
                            $.ajax({
                                url: '/Api/Menu/',
                                type: 'POST',
                                data: $('#ff3').serialize(),
                                success: function (data) {
                                    if (data.success) {
                                        $('#tt3').treegrid('reload');
                                    }
                                    $.messager.alert('提示', data.message);
                                }
                            });
                        }
                    }
                }, {
                    text: '关闭',
                    handler: function () {
                        $("#dd3").dialog("close");
                    }
                }]
        });
    }
</script>


